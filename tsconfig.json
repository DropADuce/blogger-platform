{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": ["vitest/globals", "node"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": ["src", "__tests__"]
}
